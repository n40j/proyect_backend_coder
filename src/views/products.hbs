<script>
  function agregarAlCarrito(productId) {
    // Aquí deberías implementar la lógica para agregar el producto con ID productId al carrito
    // Por ejemplo, podrías enviar una solicitud al servidor para agregar el producto al carrito
    fetch(`/api/cart/add/${productId}`, { method: 'POST' })
      .then(response => {
        if (response.ok) {
          alert('Producto agregado al carrito');
        } else {
          throw new Error('Error al agregar producto al carrito');
        }
      })
      .catch(error => {
        console.error(error);
        alert('Error al agregar producto al carrito');
      });
  }
</script>

